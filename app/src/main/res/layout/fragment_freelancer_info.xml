<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/professionCardViewFreelancerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp"
        style="@style/CardsBackgroundStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/professionTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_extrabold"
                android:text="Profession"
                android:textSize="20dp"
                android:textColor="@color/purple"/>

            <TextView
                android:id="@+id/specializationTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization:"
                android:layout_below="@id/professionTextFreelancerDetails"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginTop="10dp"
                style="@style/MainTextStyle"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/specializationChangeTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/specializationTextFreelancerDetails"
                android:layout_alignBottom="@id/specializationTextFreelancerDetails"
                android:layout_alignTop="@id/specializationTextFreelancerDetails"
                android:layout_marginStart="10dp"
                style="@style/SmallTextStyle"
                android:text="—"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/descriptionSpecializationTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:layout_below="@id/specializationChangeTextFreelancerDetails"
                android:fontFamily="@font/opensans_bold"
                style="@style/MainTextStyle"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/descriptionSpecializationChangeTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/descriptionSpecializationTextFreelancerDetails"
                android:layout_alignBottom="@id/descriptionSpecializationTextFreelancerDetails"
                android:layout_alignTop="@id/descriptionSpecializationTextFreelancerDetails"
                android:layout_marginStart="10dp"
                style="@style/SmallTextStyle"
                android:text="—"
                android:textSize="14dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/additionalInfoCardViewFreelancerDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/professionCardViewFreelancerDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/CardsBackgroundStyle"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="15dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/additionalInfoTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Information"
                android:fontFamily="@font/opensans_extrabold"
                android:textSize="20dp"
                android:textColor="@color/purple"/>

            <TextView
                android:id="@+id/descriptionAddInfoTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:layout_below="@id/additionalInfoTextFreelancerDetails"
                android:fontFamily="@font/opensans_bold"
                style="@style/MainTextStyle"
                android:layout_marginTop="20dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/descriptionAddInfoChangeTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/descriptionAddInfoTextFreelancerDetails"
                android:layout_alignBottom="@id/descriptionAddInfoTextFreelancerDetails"
                android:layout_alignTop="@id/descriptionAddInfoTextFreelancerDetails"
                android:layout_marginStart="10dp"
                style="@style/SmallTextStyle"
                android:text="—"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/countryTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country:"
                style="@style/MainTextStyle"
                android:layout_below="@id/descriptionAddInfoTextFreelancerDetails"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/countryChangeTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/countryTextFreelancerDetails"
                android:layout_alignBottom="@id/countryTextFreelancerDetails"
                android:layout_alignTop="@id/countryTextFreelancerDetails"
                android:layout_marginStart="10dp"
                style="@style/SmallTextStyle"
                android:text="—"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/cityTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City:"
                style="@style/MainTextStyle"
                android:layout_below="@id/countryTextFreelancerDetails"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/cityChangeTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cityTextFreelancerDetails"
                android:layout_alignBottom="@id/cityTextFreelancerDetails"
                android:layout_alignTop="@id/cityTextFreelancerDetails"
                android:layout_marginStart="10dp"
                style="@style/SmallTextStyle"
                android:text="—"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/typeOfWorkTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of work:"
                style="@style/MainTextStyle"
                android:layout_below="@id/cityTextFreelancerDetails"
                android:fontFamily="@font/opensans_bold"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/typeOfWorkChangeTextFreelancerDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/typeOfWorkTextFreelancerDetails"
                android:layout_alignBottom="@id/typeOfWorkTextFreelancerDetails"
                android:layout_alignTop="@id/typeOfWorkTextFreelancerDetails"
                android:layout_marginStart="10dp"
                style="@style/SmallTextStyle"
                android:text="—"
                android:textSize="14dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>